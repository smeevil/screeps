{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/typed-screeps",
      "./src/types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
